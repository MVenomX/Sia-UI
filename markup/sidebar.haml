#sidebar.col-md-3
    .large-sidebar.hidden-xs.hidden-sm
        .item.overview-button.current{:onclick=>"switchView('overview');"}
            %i.fa.fa-bars.fa-fw
            .text Overview
        .item.money-button{:onclick=>"switchView('money');"}
            %i.fa.fa-dollar.fa-fw
            .text Money
        .item.files-button{:onclick=>"switchView('files');"}
            %i.fa.fa-file.fa-fw
            .text Files
        .item.mining-button{:onclick=>"switchView('mining');setTimeout(drawMiningGraph,450);"}
            %i.fa.fa-area-chart.fa-fw
            .text Mining
        .item.hosting-button{:onclick=>"switchView('hosting');"}
            %i.fa.fa-folder-o.fa-fw
            .text Hosting
        .item.about-button
            %i.fa.fa-info.fa-fw
            .text About
